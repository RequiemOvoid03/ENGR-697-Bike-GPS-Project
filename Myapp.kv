<HomeScreen>:
    name: 'home'
    orientation: 'vertical'

    MDBoxLayout:
        size_hint_y: None
        height: dp(40)
        padding: [dp(10), dp(10)]
        spacing: dp(10)
        pos_hint: {'top': 1}
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1  # White background
            Rectangle:
                size: self.size
                pos: self.pos
        MDLabel:
            id: current_time
            text: "12:00 PM"
            font_style: "Caption"
            halign: "left"
            valign: "middle"
            size_hint_x: None
            width: dp(100)

    FloatLayout:
        size_hint: 1, 0.8

        # Central Icon (Image)
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "100dp", "100dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            Image:
                source: 'BikeTek-2.png'
                size_hint: None, None
                size: "75dp", "75dp"
                pos_hint: {'center_x': 0.5}

        # Circular Icons
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "100dp", "100dp"
            pos_hint: {'center_x': 0.25, 'center_y': 0.82}
            CircularIconButton:
                id: profile_button
                icon: 'account'
                icon_size: '45sp'
                pos_hint: {'center_x': 0.5}
                md_bg_color: 0, 1, 0, 1
                icon_color: 1, 1, 1, 1
            MDLabel:
                text: 'Profile'
                halign: 'center'
                font_style: 'H6'
                theme_text_color: 'Custom'
                text_color: 0, 1, 0, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "100dp", "100dp"
            pos_hint: {'center_x': 0.75, 'center_y': 0.82}
            CircularIconButton:
                id: map_button
                icon: 'map'
                icon_size: '45sp'
                pos_hint: {'center_x': 0.5}
                md_bg_color: 0, 0, 1, 1
                icon_color: 1, 1, 1, 1
            MDLabel:
                text: 'Maps'
                halign: 'center'
                font_style: 'H6'
                theme_text_color: 'Custom'
                text_color: 0, 0, 1, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "100dp", "100dp"
            pos_hint: {'center_x': 0.25, 'center_y': 0.50}
            CircularIconButton:
                id: settings_button
                icon: 'database'
                icon_size: '45sp'
                pos_hint: {'center_x': 0.5}
                md_bg_color: 1, 0.5, 0, 1
                icon_color: 1, 1, 1, 1
            MDLabel:
                text: 'Data'
                halign: 'center'
                font_style: 'H6'
                theme_text_color: 'Custom'
                text_color: 1, 0.5, 0, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "100dp", "100dp"
            pos_hint: {'center_x': 0.75, 'center_y': 0.50}
            CircularIconButton:
                id: navigation_button
                icon: 'navigation'
                icon_size: '45sp'
                pos_hint: {'center_x': 0.5}
                md_bg_color: 1, 0, 1, 1
                icon_color: 1, 1, 1, 1
            MDLabel:
                text: 'Navigation'
                halign: 'center'
                font_style: 'H6'
                theme_text_color: 'Custom'
                text_color: 1, 0, 1, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "100dp", "100dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}
            CircularIconButton:
                id: train_button
                icon: 'bike'
                icon_size: '45sp'
                pos_hint: {'center_x': 0.5}
                md_bg_color: 1, 0, 0, 1
                icon_color: 1, 1, 1, 1
            MDLabel:
                text: 'Train'
                halign: 'center'
                font_style: 'H6'
                theme_text_color: 'Custom'
                text_color: 1, 0, 0, 1

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: "100dp", "100dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.43}
            CircularIconButton:
                id: training_button
                icon: 'compass'
                icon_size: '45sp'
                pos_hint: {'center_x': 0.5}
                md_bg_color: 0, 1, 1, 1
                icon_color: 1, 1, 1, 1
            MDLabel:
                text: 'Compass'
                halign: 'center'
                font_style: 'H6'
                theme_text_color: 'Custom'
                text_color: 0, 1, 1, 1

        MDIconButton:
            icon: 'account-group'
            pos_hint: {'center_x': 0.80, 'center_y': 0.12}
            on_release: root.go_to_user_profile()
            user_font_size: '24sp'
            icon_size: '22sp'
            size_hint: None, None
            size: dp(48), dp(48)
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            md_bg_color: 0, 0, 0, 0.5

        MDIconButton:
            icon: 'cog'
            pos_hint: {'center_x': 0.90, 'center_y': 0.12}
            on_release: root.open_settings()
            user_font_size: '24sp'
            icon_size: '22sp'
            size_hint: None, None
            size: dp(48), dp(48)
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            md_bg_color: 0, 0, 0, 0.5

        MDIconButton:
            icon: 'bluetooth'
            pos_hint: {'center_x': 0.70, 'center_y': 0.12}
            on_release: root.handle_bluetooth()
            user_font_size: '24sp'
            icon_size: '22sp'
            size_hint: None, None
            size: dp(48), dp(48)
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1
            md_bg_color: 0, 0, 0, 0.5
